# Application
APP_ENV=development
APP_NAME=VantageEdge

# Control Plane
CONTROL_PLANE_HOST=0.0.0.0
CONTROL_PLANE_PORT=8080
CONTROL_PLANE_GRPC_PORT=9090

# Gateway
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=8000
GATEWAY_DOMAIN=vantageedge.dev

# Database
DB_HOST=postgres
DB_PORT=5432
DB_USER=vantageedge
DB_PASSWORD=changeme_db_password
DB_NAME=vantageedge
DB_SSLMODE=disable
DB_MAX_CONNECTIONS=25
DB_MAX_IDLE_CONNECTIONS=5
DB_CONNECTION_MAX_LIFETIME=5m

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_RETRIES=3
REDIS_POOL_SIZE=10

# Clerk Authentication
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key_here
CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_here
CLERK_API_URL=https://api.clerk.com/v1

# JWT
JWT_ISSUER=https://clerk.vantageedge.dev
JWT_AUDIENCE=vantageedge-api

# Rate Limiting (defaults)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT_RPS=100
RATE_LIMIT_DEFAULT_BURST=200

# Caching (defaults)
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=300
CACHE_MAX_SIZE_MB=512

# Load Balancer
LB_STRATEGY=round_robin
LB_HEALTH_CHECK_INTERVAL=10s
LB_HEALTH_CHECK_TIMEOUT=5s
LB_MAX_RETRY_ATTEMPTS=3

# Observability
OTEL_ENABLED=true
OTEL_SERVICE_NAME=vantageedge
OTEL_EXPORTER_ENDPOINT=http://jaeger:14268/api/traces
METRICS_ENABLED=true
METRICS_PORT=9091

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://vantageedge.dev
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOWED_HEADERS=Authorization,Content-Type,X-API-Key,X-Tenant-ID
CORS_ALLOW_CREDENTIALS=true

# Circuit Breaker
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60s

# Timeouts
REQUEST_TIMEOUT=30s
IDLE_TIMEOUT=120s
READ_TIMEOUT=10s
WRITE_TIMEOUT=10s
